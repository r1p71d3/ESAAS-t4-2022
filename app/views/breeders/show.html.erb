<div class="columns">
  <div class="column">
    <h3 class="title">Breeder: <%= @breeder.name %></h3>
  </div>
</div>


<div class="columns is-mobile is-centered">
  <div class="column is-10">
    <div class="box">
      <div class="columns">
        <div class="column is-4">
          Breeder Country:
        </div>
        <div class="column is-8">
          <%= @breeder.country %>
        </div>
      </div>
      <div class="columns">
        <div class="column is-4">
          Breeder Address:
        </div>
        <div class="column is-8">
          <%= @breeder.address %>
        </div>
      </div>
      <div class="columns">
        <div class="column is-4">
          Breeder Price:
        </div>
        <div class="column is-8">
          <%= @breeder.price %>
        </div>
      </div>
      <div class="columns">
        <div class="column is-4">
          Breeder Rating:
        </div>
        <div class="column is-8">
          <%= @breeder.rating %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="columns">
  <div class="column has-text-right">
    <%= link_to "Back", breeders_path, class: 'button is-info' %>
    <%= link_to "Delete", breeder_path(@breeder), 'data-method': 'delete', 'data-confirm': 'Are you sure?', class: 'button is-danger'%>
    <%= link_to "Edit", edit_breeder_path(@breeder), class: 'button is-warning' %>
  </div>
</div>
