<div class="columns">
  <div class="column">
    <h3 class="title">Find Animals Near You</h3>
    <p class="subtitle">Bring Your New Best Friend Home.</p>
  </div>
</div>

<div class="columns is-mobile is-centered">
  <div class="column is-10">
    <div class="columns is-multiline is-mobile">
      <% @animals.each do | animal | %>
        <div class="column is-4">
          <div class="card shadow-md is-cursor-pointer transform is-duration-300 hover-shadow-xl hover-translate-y">
            <div class="card-image">
              <figure class="image is-4by3">
                <% if animal.image_link.nil? %>
                  <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                <% else %>
                  <img src="<%= animal.image_link %>" alt="animal picture">
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= link_to animal.name, animal_path(animal) %></p>
                  <p class="subtitle is-6">@My breeder: <%= Animal.get_breeder(animal.id).name %></p>
                </div>
              </div>

              <div class="content">
                Animal Type: <%= animal.animal_type %>
                <br>
                Breed: <%= animal.breed %>
                <br>
                Price: <%= animal.price %>
                <br>
                Anticipated Birth: <%= animal.anticipated_birthday.getlocal.strftime("%B %d, %Y") %>
                <br>
                <br>
                <strong>Location:</strong> <%= Animal.get_breeder(animal.id).city%>, <%= Animal.get_breeder(animal.id).country%>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="columns">
  <div class="column has-text-right">
    <%= link_to 'New Animal', new_animal_path, class:"button is-warning is-light" %>
  </div>
</div>


