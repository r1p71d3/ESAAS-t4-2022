<div class="columns">
  <div class="column">
    <h3 class="title">Find Animals Near You</h3>
    <p class="subtitle">Bring Your New Best Friend Home.</p>
  </div>
</div>

<div class="columns is-mobile is-centered">
  <div class="column is-6">
    <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
      <thead>
      <tr>
        <th>Animal Name</th>
        <th>Type</th>
        <th>Breed</th>
      </tr>
      </thead>
      <tbody>
      <% @animals.each do |animal| %>
        <tr>
          <td><%= link_to "#{animal.name}", animal_path(animal) %></td>
          <td><%= animal.animal_type %></td>
          <td><%= animal.breed %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="columns">
  <div class="column has-text-right">
    <%= link_to 'New Animal', new_animal_path, class:"button is-warning is-light" %>
  </div>
</div>


